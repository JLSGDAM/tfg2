<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Scan">

    <TextView
        android:id="@+id/textViewAnalisis"
        android:layout_width="373dp"
        android:layout_height="604dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="95dp"
        android:scrollbars="vertical"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bDetalle"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="231dp"
        android:layout_marginBottom="30dp"
        android:onClick="informeDetallado"
        android:text="Informe Detallado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnalisis" />

    <Button
        android:id="@+id/bVolver"
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="29dp"
        android:onClick="Volver"
        android:text="Escanear de nuevo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bDetalle"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnalisis" />

    <ProgressBar
        android:id="@+id/pb2"
        style="?android:attr/progressBarStyle"
        android:layout_width="164dp"
        android:layout_height="157dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAnalisis"
        app:layout_constraintEnd_toEndOf="@+id/textViewAnalisis"
        app:layout_constraintStart_toStartOf="@+id/textViewAnalisis"
        app:layout_constraintTop_toTopOf="@+id/textViewAnalisis" />

    <ImageView
        android:id="@+id/loading"
        android:layout_width="265dp"
        android:layout_height="410dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAnalisis"
        app:layout_constraintEnd_toEndOf="@+id/textViewAnalisis"
        app:layout_constraintStart_toStartOf="@+id/textViewAnalisis"
        app:layout_constraintTop_toTopOf="@+id/textViewAnalisis"
         />

</androidx.constraintlayout.widget.ConstraintLayout>